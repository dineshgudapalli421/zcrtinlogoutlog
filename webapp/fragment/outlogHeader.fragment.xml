<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    xmlns:svm="sap.ui.comp.smartvariants"
>
    <f:DynamicPageHeader
        id="idGroupItems"
        binding="{OutLogModel>/InitialLoad}"
    >
        <f:content>
            <fb:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                filterChange=".onFilterChange"
                afterVariantLoad=".onAfterVariantLoad"
                filterContainerWidth="16rem"
                header="Outlog"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        name="action"
                        label="{i18n>action}"
                        groupName="Group2"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                editable="false"
                                value="{OutLogModel>ActionText}"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Ref"
                        label="{i18n>refDoc}"
                        groupName="Group2"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                editable="false"
                                placeholder="{i18n>lhoutlogFromPlaceholdertxt}"
                                value="{OutLogModel>RefdocText}"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Posting"
                        label="{i18n>postType}"
                        groupName="Group2"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                editable="false"
                                placeholder="{i18n>lhoutlogFromPlaceholdertxt}"
                                value="{OutLogModel>PtypeText}"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Mvt"
                        label="{i18n>mvtType}"
                        groupName="Group2"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                editable="false"
                                placeholder="{i18n>lhoutlogFromPlaceholdertxt}"
                                value="{OutLogModel>MovementType}"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="EquipFrom"
                        label="{i18n>EqpFrom}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                        mandatory="true"
                    >
                        <fb:control>
                            <Input
                                id="idOutlogEquipFrom"
                                value="{OutLogModel>EquipFrom}"
                                maxLength="18"
                                liveChange="onLiveChangeEqFrom"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="EqpTo"
                        label="{i18n>EqpTo}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                id="idOutlogEquipTo"
                                value="{OutLogModel>EquipTo}"
                                maxLength="18"
                                liveChange="onLiveChangeEqTo"
                                type="Number"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="PlantFrm"
                        label="{i18n>plantFrom}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value="{OutLogModel>Plant}"
                                description="{OutLogModel>Name1}"
                                editable="false"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="PlantTo"
                        label="{i18n>plantTo}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                value="{OutLogModel>Plant}"
                                description="{OutLogModel>Name1}"
                                editable="false"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="StorLoc"
                        label="{i18n>SourcestorLoc}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input
                                placeholder="{i18n>lhoutlogFromPlaceholdertxt}"
                                value="{OutLogModel>StorageLocation}"
                                description="{OutLogModel>Lgobe}"
                                editable="false"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="TargStorLoc"
                        label="{i18n>TargetStorLoc}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <ComboBox
                                id="idTargetStorLoc"
                                items="{OutLogModel>NavStorageLoc/results}"
                                required="true"
                                selectedKey="{OutLogModel>ReceivingStorageLocation}"
                                change="onChangeTargetStorLoc"
                            >
                                <core:Item
                                    key="{OutLogModel>ReceivingStorageLocation}"
                                    text="{OutLogModel>ReceivingStorageLocation} - {OutLogModel>StorageLocationDesc}"
                                />
                            </ComboBox>
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Name6"
                        label="{i18n>docDate}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <DatePicker
                                id="idHeaderDocDate"
                                required="true"
                                value="{OutLogModel>/oCurrentDate}"
                                valueFormat="yyyy-MM-dd"
                                displayFormat="MM-dd-yyyy"
                                change="handleChangeDocDate"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        id="idPostingDateGroup"
                        name="Name7"
                        label="{i18n>postDate}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <DatePicker
                                id="idPostingDate"
                                required="true"
                                valueFormat="yyyy-MM-dd"
                                displayFormat="MM-dd-yyyy"
                                change="handleChangePostingDate"
                                value="{OutLogModel>/oPostingDate}"
                            />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        name="Name5"
                        label="{i18n>receipient}"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Input value="{OutLogModel>Recipient}" />
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
        </f:content>
    </f:DynamicPageHeader>
</core:FragmentDefinition>
